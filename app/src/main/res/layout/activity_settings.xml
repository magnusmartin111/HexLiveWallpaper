<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.moorhenapps.bluehex.wallpaper.HexView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/hex_example" />

            <TextView
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/slowest"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/fastest"
                    android:gravity="end"
                    android:padding="8dp"/>
            </LinearLayout>
            <SeekBar
                android:max="10"
                android:id="@+id/speed"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"/>

            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colour"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:tag="BLUE"
                    style="@style/ToggleBarButton"
                    android:text="@string/blue"
                    android:id="@+id/blue"/>
                <TextView
                    android:tag="GREEN"
                    android:text="@string/green"
                    android:id="@+id/green"
                    style="@style/ToggleBarButton"/>
                <TextView
                    android:tag="PURPLE"
                    android:text="@string/purple"
                    android:id="@+id/purple"
                    style="@style/ToggleBarButton"/>
                <TextView
                    android:tag="SPECTRUM"
                    android:text="@string/spectrum"
                    android:id="@+id/spectrum"
                    style="@style/ToggleBarButton"/>
            </LinearLayout>

            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tile_size"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:tag="TINY"
                    style="@style/ToggleBarButton"
                    android:text="@string/tiny"
                    android:id="@+id/tiny"/>
                <TextView
                    android:tag="SMALL"
                    android:text="@string/small"
                    android:id="@+id/small"
                    style="@style/ToggleBarButton"/>
                <TextView
                    android:tag="NORMAL"
                    android:text="@string/normal"
                    android:id="@+id/size_normal"
                    style="@style/ToggleBarButton"/>
                <TextView
                    android:tag="BIG"
                    android:text="@string/big"
                    android:id="@+id/big"
                    style="@style/ToggleBarButton"/>
                <TextView
                    android:tag="LARGE"
                    android:text="@string/large"
                    android:id="@+id/large"
                    style="@style/ToggleBarButton"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <View
        android:background="#aaaaaa"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button
        style="@android:style/Widget.Material.Button.Borderless"
        android:id="@+id/install"
        android:text="@string/install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>