<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SettingsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.moorhenapps.bluehex.wallpaper.HexView
                android:id="@+id/hex_example"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="8dp"
                    android:text="@string/slowest" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="8dp"
                    android:text="@string/fastest" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/speed"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:max="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/colour" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.moorhenapps.bluehex.SmartToggleButton
                    android:id="@+id/blue"
                    style="@style/ToggleBarButton"
                    android:tag="BLUE"
                    android:text="@string/blue" />

                <com.moorhenapps.bluehex.SmartToggleButton
                    android:id="@+id/green"
                    style="@style/ToggleBarButton"
                    android:tag="GREEN"
                    android:text="@string/green" />

                <com.moorhenapps.bluehex.SmartToggleButton
                    android:id="@+id/purple"
                    style="@style/ToggleBarButton"
                    android:tag="PURPLE"
                    android:text="@string/purple" />

                <com.moorhenapps.bluehex.SmartToggleButton
                    android:id="@+id/red"
                    style="@style/ToggleBarButton"
                    android:tag="RED"
                    android:text="@string/red" />

                <com.moorhenapps.bluehex.SmartToggleButton
                    android:id="@+id/grey"
                    style="@style/ToggleBarButton"
                    android:tag="GREY"
                    android:text="@string/grey" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/tile_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.moorhenapps.bluehex.SmartToggleButton
                    android:id="@+id/tiny"
                    style="@style/ToggleBarButton"
                    android:tag="TINY"
                    android:text="@string/tiny" />

                <com.moorhenapps.bluehex.SmartToggleButton
                    android:id="@+id/small"
                    style="@style/ToggleBarButton"
                    android:tag="SMALL"
                    android:text="@string/small" />

                <com.moorhenapps.bluehex.SmartToggleButton
                    android:id="@+id/size_normal"
                    style="@style/ToggleBarButton"
                    android:tag="NORMAL"
                    android:text="@string/normal" />

                <com.moorhenapps.bluehex.SmartToggleButton
                    android:id="@+id/big"
                    style="@style/ToggleBarButton"
                    android:tag="BIG"
                    android:text="@string/big" />

                <com.moorhenapps.bluehex.SmartToggleButton
                    android:id="@+id/large"
                    style="@style/ToggleBarButton"
                    android:tag="LARGE"
                    android:text="@string/large" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa" />

    <Button
        android:id="@+id/install"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/install" />
</LinearLayout>